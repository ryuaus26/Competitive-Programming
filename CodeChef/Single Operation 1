#include <bits/stdc++.h>
using namespace std;

#define ll long long
#define pb push_back

void solve()
{
    int n;
    cin >> n;
	string x;
	cin >> x;
	int answer = 0;
	for (int i = 0; i < n; i++)
	{
		answer++;
		if (x[i + 1] == '0')
		{
			break;
		}
	}
	cout << answer << endl;
}

int main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin >> t;
	while (t--)
	{
		solve();
	}
}
